{
  "name": "spcss-ghost",
  "description": "Ghost Theme Inspired by SPCSS",
  "version": "1.1.3",
  "engines": {
    "ghost": ">=2.0.0"
  },
  "license": "MIT",
  "author": "Vincent Alexander Saulys <contact@saulys.me>",
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "blank",
    "dev",
    "developer",
    "development",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valexandersaulys/spcss-ghost.git"
  },
  "bugs": {
    "url": "https://github.com/valexandersaulys/spcss-ghost/issues"
  },
  "contributors": "https://github.com/valexandersaulys/spcss-ghost/graphs/contributors",
  "config": {
    "posts_per_page": 100
  },
  "homepage": "https://github.com/valexandersaulys/spcss-ghost#readme",
  "main": "index.js",
  "scripts": {
    "check": "gscan src/",
    "watch": "npx tailwindcss -i input.tailwind.css -o ./src/assets/css/public.css --watch",
    "build": "npx tailwindcss -i input.tailwind.css -o ./src/assets/css/public.css && zip theme.zip src -r -q"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.2"
  }
}
